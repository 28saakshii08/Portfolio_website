---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects Header</div>
  </div>

  <HorizontalCard
    title="Portfolio"
    img="/portfolio.png"
    desc="Portfolio."
    url="https://sahilsharma21.netlify.app/"
    badge="NEW"
  />

  <HorizontalCard
    title="Astro-Landing-Page"
    img="/AstroLandingPage.png"
    desc="An Astro + Tailwind CSS starter kit for landing pages."
    url="https://sahilastro.netlify.app/"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Workout Buddy Mern App"
    img="/WorkoutMernApp.png"
    desc="A workout stats tracking web app."
    url="https://github.com/KIET7UKE/WorkoutBuddy-MERN-app"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Microsoft Homepage Clone"
    img="/microsoft.png"
    desc="Microsoft Homepage Clone using HTML, CSS, JS."
    url="https://microsofthp-clone.netlify.app/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="DMatrix-App"
    img="/DMatrix-app.png"
    desc="Have you ever wanted to build a delivery app that will calculate the shortest distance from each drop off spot? So here it is"
    url="https://dmatrix1.azurewebsites.net/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="SUIIT-Clone"
    img="/suiitclone.png"
    desc="I made the homepage clone of our university website using HTML, CSS & JS"
    url="https://suiit-clone.netlify.app/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Hacktoberfest 2022"
    img="/Hacktoberfest2022.png"
    desc="A repository for the new commers to Open-Source and GitHub."
    url="https://github.com/KIET7UKE/Hacktoberfest-2K22"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Online Chatting App"
    img="/Online-Chatting-App.png"
    desc="An Real-Time Online Chatting App."
    url="https://resonant-pika-7275ab.netlify.app/"
  />
</BaseLayout>
